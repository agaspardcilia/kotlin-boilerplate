{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/main/webapp/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/main/webapp/**/*.ts",
    "src/main/webapp**/*.tsx",
    "src/main/webapp**/*.vue"
    // TODO
//    "tests/**/*.ts",
//    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
